<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:gravity="center_horizontal"
    android:scrollbars="vertical|horizontal">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/nameCase"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/descrip"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_description"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.13"
                android:layout_margin="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/dataCase"
                android:id="@+id/textView3"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp" />

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="156dp"
                android:id="@+id/date_case"
                android:layout_gravity="center_horizontal"
                android:calendarViewShown="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Время"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Начало"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal" />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_start"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Конец"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal" />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_end"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Состояние"
                android:id="@+id/textView7"
                android:layout_gravity="center_horizontal" />

            <Switch
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:text="Дело сделано"
                android:id="@+id/switch_case_end"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:layout_margin="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/color"
                android:id="@+id/textView8"
                android:layout_gravity="center_horizontal" />

            <Spinner
                android:id="@+id/spinner_color"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:text="@string/save"
                    android:id="@+id/button_save_case"
                    android:textAllCaps="false"
                    android:background="@drawable/style_button_save"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="30dp" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="@string/delete"
                    android:id="@+id/button_delete_case"
                    android:textAllCaps="false"
                    android:background="@drawable/style_button_delete"
                    android:layout_marginBottom="30dp" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="@string/cancel"
                    android:id="@+id/button_cancel_case"
                    android:textAllCaps="false"
                    android:background="@drawable/style_button_cancel"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="30dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>







</LinearLayout>